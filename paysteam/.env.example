# PaySteam (.env)
# Copy to paysteam/.env

APP_ENV=dev

# MySQL (Docker default)
DB_HOST=db
DB_USER=root
DB_PASS=root
DB_NAME=paysteam

# Base URL (where PaySteam is reachable from the browser)
APP_BASE_URL=http://localhost:8080/paysteam

# API bearer token (SFT must use the same value in PAYSTEAM_API_TOKEN)
API_BEARER_TOKEN=changeme_token

# Webhook signing secret (SFT must use the same value in PAYSTEAM_WEBHOOK_SECRET)
WEBHOOK_SECRET=changeme_webhook_secret

CURRENCY=EUR
