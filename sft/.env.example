# SFT (.env)
# Copy to sft/.env

APP_ENV=dev

# Base URLs
# PUBLIC_BASE_URL: where SFT is reachable from the browser (host/port)
PUBLIC_BASE_URL=http://localhost:8080/sft
# INTERNAL_BASE_URL: where SFT is reachable for server-to-server calls inside Docker
INTERNAL_BASE_URL=http://localhost/sft

# MySQL (Docker default)
DB_HOST=db
DB_USER=root
DB_PASS=root
DB_NAME=sft

# PaySteam integration (must match paysteam/.env)
PAYSTEAM_BASE_URL=http://localhost/paysteam
PAYSTEAM_API_TOKEN=changeme_token
PAYSTEAM_WEBHOOK_SECRET=changeme_webhook_secret

# PaySteam merchant identity (email of an 'esercente' user in PaySteam)
PAYSTEAM_MERCHANT_EMAIL=esercente@paysteam.it
